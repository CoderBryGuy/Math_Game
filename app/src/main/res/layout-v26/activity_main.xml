<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/strangerthingsart" android:gravity="center_horizontal">
    <Button
            android:text="@string/AdditionBtn"
            android:layout_width="200dp"
            android:layout_height="75dp" android:id="@+id/buttonAdd"
            android:layout_marginTop="75dp" android:layout_marginBottom="20dp"/>
    <Button
            android:text="@string/SubBtn"
            android:layout_width="200dp"
            android:layout_height="75dp" android:id="@+id/buttonSub" android:layout_margin="20dp"/>
    <Button
            android:text="@string/MultBtn"
            android:layout_width="200dp"
            android:layout_height="75dp" android:id="@+id/buttonMult" android:layout_margin="20dp"/>
    <Button
            android:text="@string/random_operation"
            android:layout_margin="20dp"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/buttonRandGame"
            android:tooltipText="Equation With Random Operation
             (+ - * /)"/>
</LinearLayout>